<Window x:Class="Sklad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad"
        mc:Ignorable="d" Loaded="Window_Loaded"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="remove" Click="remove_Click" Height="60" Width="120" Background="LightGray"/>
            <Button x:Name="reload" Click="reload_Click" Height="60" Width="120" Background="LightGray"/>
        </StackPanel>


            <Button Grid.Column="1" Grid.Row="1"  Style="{StaticResource MaterialDesignFloatingActionButton}" Panel.ZIndex="2"   HorizontalAlignment="Right" VerticalAlignment="Bottom"  Click="add_Click" Name="add" Background="LightGreen"  Margin="20" Height="45" Width="45" >
                <materialDesign:PackIcon Kind="Plus" Foreground="White" Height="30" Width="30"/>
                
            </Button>
        <ListBox x:Name="list" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}" Grid.ColumnSpan="2"/>
                        <TextBlock Text="{Binding ShtrixKod}" Margin="0 0 10 0" Grid.Row="1"/>
                        <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
