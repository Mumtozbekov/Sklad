<Window x:Class="Sklad.Views.TovarElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad.Views"
        mc:Ignorable="d"
        Title="TovarElement" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nomi:       " VerticalAlignment="Center"/>
            <TextBox    MinWidth="200" Margin="20 5" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Shtrix kod: " VerticalAlignment="Center"/>
            <TextBox    MinWidth="200" Margin="20 5" HorizontalAlignment="Left"/>
        </StackPanel>
        
    </Grid>
</Window>
